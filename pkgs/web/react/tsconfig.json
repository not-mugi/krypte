{
  "compilerOptions": {
    "tsBuildInfoFile": ".tmp/tsconfig.build.tsbuildinfo",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "lib",
    "types": [
      "node"
    ],
    "target": "ESNext",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./lib",
    "./esm",
    "./cjs",
    "./.tmp"
  ]
}