{
  "compilerOptions": {
    "tsBuildInfoFile": "lib/tsconfig.build.tsbuildinfo",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "lib",
    "types": ["node"],
    "target": "ESNext",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@mugijs/typescript": ["../typescript/*"]
    }
  },
  "include": ["src"],
  "exclude": ["./lib", "./esm", "./cjs", "./.tmp", "./dist", "./node_modules"]
}
