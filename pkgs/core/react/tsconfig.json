{
  "compilerOptions": {
    "tsBuildInfoFile": ".tmp/tsconfig.build.tsbuildinfo",
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "lib",
    "types": ["node"],
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "emitDeclarationOnly": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["./lib", "./esm", "./cjs", "./.tmp"]
}
